<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/mainView"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="8" >

        <com.camera.view.MyGLSurfaceView
            android:id="@+id/view3d"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <ImageView
            android:id="@+id/background"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_launcher" />
    </RelativeLayout>

    <View
        android:layout_width="1dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.1"
        android:background="#EEEFFF" />

    <LinearLayout
        android:id="@+id/iconBar"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/camer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="camer_icon"
            android:src="@drawable/ic_action_camera" />

        <ImageView
            android:id="@+id/file"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="file_icon"
            android:src="@drawable/ic_action_storage" />

        <ImageView
            android:id="@+id/load_model"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="load_model_icon"
            android:src="@drawable/ic_action_place" />

        <ImageView
            android:id="@+id/translate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="translate_icon"
            android:src="@drawable/ic_action_directions" />

        <ImageView
            android:id="@+id/rotate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="rotate_icon"
            android:src="@drawable/ic_action_rotate_right" />

        <ImageView
            android:id="@+id/scale"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="scale_icon"
            android:src="@drawable/ic_action_computer" />

        <ImageView
            android:id="@+id/three_diemension"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="three_diemension_icon"
            android:src="@drawable/ic_action_dial_pad" />
    </LinearLayout>

</LinearLayout>